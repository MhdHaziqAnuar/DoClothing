<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/babyblue"
    app:cardElevation="8dp"
    android:id="@+id/card_request">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_itemrequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item requested"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_requestname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested by"
                android:textColor="@color/black"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/tv_requestquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requested quantity"
                android:textColor="@color/black"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/tv_requestphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact number"
                android:textColor="@color/black"
                android:textSize="20sp"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/rDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_baseline_delete_24" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>